{% extends 'base.html.twig' %}

{% block title %}Acteur{% endblock %}

{% block body %}
    <h1>Acteurs</h1>

    <p>Id: {{ actor.id }}</p>
    <p>Name: {{ actor.name }}</p>
    <p>Programs :</p>
    <ul>
        {% for program in actor.programs %}
            <li><a href="{{ path('program_show', {'id': program.id}) }}">{{ program.title }}</a></li>
        {% endfor %}
    </ul>
{% endblock %}
